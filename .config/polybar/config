[colors]
    darkgray =  #ee2f343f
    orange = #f72f343f
    white = #ebdbb2
    background = #262626
    background-alt = #444
    foreground = #f3f4f5
    #foreground-alt = #4e4e4e
    foreground-alt = #55
    foreground-dim = #676e7d
    primary = #ffb52a
    secondary = #e60053
    alert = #fb4934
    high = #268bd2
    high-alt = #0c2b41


[settings]
    ; The throttle settings lets the eventloop swallow up til X events
    ; if they happen within Y millisecond after first event was received.
    ; This is done to prevent flood of update event.
    ;
    ; For example if 5 modules emit an update event at the same time, we really
    ; just care about the last one. But if we wait too long for events to swallow
    ; the bar would appear sluggish so we continue if timeout
    ; expires or limit is reached.
    ;throttle-output = 5
    ;throttle-output-for = 10

    ; Time in milliseconds that the input handler will wait between processing events
    ;throttle-input-for = 30

    ; Reload upon receiving XCB_RANDR_SCREEN_CHANGE_NOTIFY events
    screenchange-reload = true


[global/wm]
    margin-top = 0
    margin-bottom = 0


[wm/bspwm]
    reconfigure-workspaces = false
    restart-window = false


[bar/base]
    width = 100%
    height = 20

    radius = 0.0
    fixed-center = true

    background = ${colors.background}
    foreground = ${colors.foreground}

    line-size = 2
    line-color = #f00

    border-size = 0
    border-color = #00000000

    padding-left = 0
    padding-right = 2

    module-margin-left = 1
    module-margin-right = 2

    ;tray-position = right
    ;tray-padding = 2
    ;tray-background = ${colors.background}

    ;underline-size = 2

    wm-restack = bspwm

    ;font-0 = Noto Sans Regular:pixelsize=12;0
    font-0 = fixed:pixelsize=10;1
    font-1 = FontAwesome:size=10;-2
    font-2 = Wuncon Siji:pixelsize=10;-2

    modules-center = bspwm
    ;override-redirect = true

    ;scroll-up = bspwm-desknext
    ;scroll-down = bspwm-deskprev

# used combined with "env MONITOR=$mon polybar $(hostname) &"
[bar/main.T450s]
    inherit = bar/base
    monitor = ${env:MONITOR_MAIN:eDP1}

    tray-position = right
    tray-padding = 2
    tray-background = ${colors.background}

    modules-left = cpu memory volume wifi
    modules-right = date battery powermenu


